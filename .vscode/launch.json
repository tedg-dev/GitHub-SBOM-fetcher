{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run fetch_sbom.py",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/fetch_sbom.py",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "args": [
                "--key-file",
                "keys.json",
                "--output-dir",
                "sboms"
            ],
            "env": {
                "PYTHONUNBUFFERED": "1"
            },
            "justMyCode": true
        },
        {
            "name": "Python: Current File (args)",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "args": [
                "--gh-user", "tedg-dev",
                "--gh-repo", "beatBot",
                "--key-file", "keys.json",
                "--output-dir", "sboms"
            ],
            "env": {
                "PYTHONUNBUFFERED": "1"
            },
            "justMyCode": true
        }
    ]
}